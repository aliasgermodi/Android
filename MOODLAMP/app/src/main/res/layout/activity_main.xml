<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >



    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp" />

    <Button
        android:id="@+id/redB"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_x="0dp"
        android:layout_y="80dp"
        android:text="RED"
        android:background="#ff0000" />

    <Button
        android:id="@+id/greenB"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_x="100dp"
        android:layout_y="80dp"
        android:text="GREEN"
        android:background="#00ff00" />

    <Button
        android:id="@+id/blueB"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_x="200dp"
        android:layout_y="80dp"
        android:text="BLUE"
        android:background="#0000ff" />

    <Button
        android:id="@+id/purpleB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="0dp"
        android:layout_y="150dp"
        android:background="#ff00ff" />

    <Button
        android:id="@+id/yellowB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="0dp"
        android:layout_y="220dp"
        android:background="#ffff00" />

    <Button
        android:id="@+id/lbB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="0dp"
        android:layout_y="290dp"
        android:background="#66ffff" />

    <Button
        android:id="@+id/maroonB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="100dp"
        android:layout_y="150dp"
        android:background="#ff3333" />

    <Button
        android:id="@+id/dbB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="100dp"
        android:layout_y="290dp"
        android:background="#000099" />

    <Button
        android:id="@+id/vB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="200dp"
        android:layout_y="150dp"
        android:background="#b266ff" />

    <Button
        android:id="@+id/dgreenB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="200dp"
        android:layout_y="220dp"
        android:background="#006600" />

        <Button
        android:id="@+id/orangeB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="200dp"
        android:layout_y="290dp"
        android:background="#ff8000" />

    <Button
        android:id="@+id/whiteB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="100dp"
        android:layout_y="220dp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/rainB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="370dp"
        android:text="rainbow"
        android:background="#ff7cd6" />

    <Button
        android:id="@+id/offB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="420dp"
        android:text="off"
         />

    <Button
        android:id="@+id/close"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_x="220dp"
        android:layout_y="0dp"
        android:text="exit" />

    <Button
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_x="100dp"
        android:layout_y="0dp"
        android:text="CONNECT" />

    <EditText
        android:id="@+id/deviceName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:ems="10" >



    <requestFocus />
    </EditText>

</AbsoluteLayout>