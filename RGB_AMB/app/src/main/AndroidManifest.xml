<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ali.rgb_amb" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".options"
            android:label="@string/title_activity_options"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ali.rgb_amb.MainActivity" />
        </activity>
        <activity
            android:name=".RGB"
            android:label="@string/title_activity_rgb"
            android:parentActivityName=".options" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ali.rgb_amb.options" />
        </activity>
        <activity
            android:name=".AMB"
            android:label="@string/title_activity_amb"
            android:parentActivityName=".options" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ali.rgb_amb.options" />
        </activity>
    </application>

</manifest>
