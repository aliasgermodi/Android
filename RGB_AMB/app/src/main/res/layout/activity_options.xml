<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ali.rgb_amb.Options">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MOOD LAMP"
        android:id="@+id/ml"
        android:onClick="mood" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="AMBIENT LIGHT"
        android:id="@+id/al"
        android:layout_below="@+id/ml"
        android:onClick="amb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SWITCH CONTROL"
        android:id="@+id/sc"
        android:layout_below="@+id/al"
        android:onClick="cont"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
